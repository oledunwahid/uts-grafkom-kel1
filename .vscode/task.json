{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-o",
        "${workspaceFolder}/build/uts-grafkom-kel1",
        "${workspaceFolder}/src/*.cpp",
        "-lGL",
        "-lGLU",
        "-lglut"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build task for compiling OpenGL project"
    }
  ]
}
